<?xml version="1.0" encoding="UTF-8"?>

<layout>
    <default>

        <reference name="head">
            <action method="addLinkRel">
                <rel>stylesheet</rel>
                <href>https://fonts.googleapis.com/css?family=Muli</href>
            </action>
            <action method="addCss">
                <stylesheet>tbt_ondemand/css/styles.css</stylesheet>
            </action>
        </reference>
        <reference name="content">
            <block type="tbt_ondemand/header" name="ondemand.header" template="tbt_ondemand/header.phtml" />
        </reference>
        <reference name="before_body_end">
            <block type="core/template" name="inline.manual.player.js" after="-" template="tbt_ondemand/player.phtml" />
        </reference>
    </default>
    
    <adminhtml_index_login>
        <reference name="root">
            <block type="adminhtml/page_head" name="head" as="head" template="page/head.phtml">
                <action method="addLinkRel">
                    <rel>stylesheet</rel>
                    <href>https://fonts.googleapis.com/css?family=Muli</href>
                </action>
                <action method="addCss">
                    <stylesheet>tbt_ondemand/css/styles.css</stylesheet>
                </action>
            </block>
            <block type="tbt_ondemand/header" name="ondemand.header" template="tbt_ondemand/header.phtml" />
            <block type="core/template" name="inline.manual.player.js" after="-" template="tbt_ondemand/player.phtml" />
        </reference>
    </adminhtml_index_login>
</layout>
